                                        <t t-foreach="user.user_id.employee_ids" t-as="emp">
                                            <span t-field="emp.job_id.name" />
                                            <br />
                                        </t>
                                        <br />
                                    </t>
                                </td>
                                <td class="tg-3xi5">
                                    <t t-foreach="o.review_step" t-as="user">
                                        <t t-foreach="user.user_id.employee_ids" t-as="emp">
                                            <span t-field="emp.job_id.name" />
                                            <br />
                                        </t>
                                        <br />
                                    </t>
