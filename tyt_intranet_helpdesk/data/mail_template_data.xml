<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_tyt_intranet_mailbox" model="mail.template">
            <field name="name">Mailbox: Notification</field>
            <field name="model_id" ref="tyt_intranet_helpdesk.model_tyt_intranet_mailbox"/>
            <field name="subject">Mailbox Notification</field>
            <field name="email_from">"${object.company_id.name}" &lt;${object.company_id.email | safe}&gt;</field>
            <field name="email_to">{{ object.get_emails_to_send() }}</field>
            <field name="body_html" type="html">
                <div style="margin:0px;padding:0px; font-size: 13px;">
                    <p>

                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
