<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tyt_intranet_mailbox_view_form" model="ir.ui.view">
        <field name="name">tyt.intranet.mailbox.view.form</field>
        <field name="model">tyt.intranet.mailbox</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>

                    <button name="action_escalated" string="Escalated" type="object" states="received"
                            class="btn-primary"/>
                    <button name="action_in_progress" string="In Progress" type="object" states="escalated"
                            class="btn-primary"/>
                    <button name="action_resolved" string="Resolved" type="object" states="in_progress"
                            class="btn-primary" confirm="Are you sure you want to mark this as resolved"/>
                    <button name="send_mail_modal" string="Send Email" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
						<label for="name" class="oe_edit_only"/>
						<h1>
							<field name="name"/>
						</h1>
					</div>
                    <group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="partner_id"/>
                            <field name="partner_email" widget="email"/>
                            <field name="employee_number"/>
                        </group>
                        <group>
                            <field name="is_anonymous" readonly="1"/>
                            <field name="site_id" readonly="1"/>
                            <field name="service_area_id" readonly="1"/>
                            <field name="message_type_id" readonly="1"/>
                            <field name="receive_response" readonly="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="matrix_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Comment" name="comment">
                            <field name="comment" readonly="1"/>
                        </page>
                        <page string="Internal Classification" name="internal_classification">
                            <group>
                                <group>
                                    <field name="responsible_id" widget="many2one_avatar_user"/>
                                    <field name="priority" widget="priority"/>
                                </group>
                                <group>
                                    <field name="create_date"/>
                                    <field name="deadline_date"/>
                                </group>
                            </group>
                            <group string="Response to sender" attrs="{'invisible': [('receive_response', '=', False)]}">
                                <group>
                                    <field name="close_date"/>
                                </group>
                                <group>
                                    <field name="survey_id"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('receive_response', '=', False)]}">>
                                <field name="response" widget="html"/>
                            </group>
                        </page>
                        <page string="Response Message" name="response_message" attrs="{'invisible': [('receive_response', '=', False)]}">
                            <field name="response_message"/>
                        </page>
                        <page string="Responsibles" name="responsibles">
                            <field name="responsible_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tyt_intranet_mailbox_view_tree" model="ir.ui.view">
        <field name="name">tyt.intranet.mailbox.view.tree</field>
        <field name="model">tyt.intranet.mailbox</field>
        <field name="arch" type="xml">
            <tree default_order="create_date desc">
                <field name="user_id"/>
                <field name="is_anonymous"/>
                <field name="site_id"/>
                <field name="service_area_id"/>
                <field name="message_type_id"/>
                <field name="receive_response"/>
                <field name="priority" widget="priority" readonly="1"/>
                <field name="deadline_date"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'received'"
                       decoration-warning="state in ['escalated', 'in_progress']"
                       decoration-success="state == 'resolved'"/>
            </tree>
        </field>
    </record>

    <record id="tyt_intranet_mailbox_action" model="ir.actions.act_window">
        <field name="name">Mailbox</field>
        <field name="res_model">tyt.intranet.mailbox</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': False}</field>
    </record>
</odoo>
