<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tyt_intranet_mailbox_view_form" model="ir.ui.view">
        <field name="name">tyt.intranet.mailbox.view.form</field>
        <field name="model">tyt.intranet.mailbox</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
						<label for="name"/>
						<h1>
							<field name="name"/>
						</h1>
					</div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="partner_id"/>
                            <field name="employee_number"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="is_anonymous"/>
                            <field name="site_id"/>
                            <field name="service_area_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Comment" name="comment">
                            <field name="comment"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tyt_intranet_mailbox_tree_form" model="ir.ui.view">
        <field name="name">tyt.intranet.mailbox.tree.form</field>
        <field name="model">tyt.intranet.mailbox</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="employee_number"/>
                <field name="email"/>
                <field name="is_anonymous"/>
                <field name="site_id"/>
                <field name="service_area_id"/>
            </tree>
        </field>
    </record>

    <record id="tyt_intranet_mailbox_action" model="ir.actions.act_window">
        <field name="name">Mailbox</field>
        <field name="res_model">tyt.intranet.mailbox</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
