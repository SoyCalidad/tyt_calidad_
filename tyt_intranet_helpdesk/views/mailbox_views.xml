<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tyt_intranet_mailbox_view_form" model="ir.ui.view">
        <field name="name">tyt.intranet.mailbox.view.form</field>
        <field name="model">tyt.intranet.mailbox</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="send_mail_modal" string="Send Email" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
						<label for="name" class="oe_edit_only"/>
						<h1>
							<field name="name"/>
						</h1>
					</div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="partner_id"/>
                            <field name="partner_name"/>
                            <field name="partner_email"/>
                            <field name="employee_number"/>
                        </group>
                        <group>
                            <field name="is_anonymous"/>
                            <field name="site_id" required="1"/>
                            <field name="service_area_id" required="1"/>
                            <field name="message_type_id" required="1"/>
                            <field name="receive_response"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Comment" name="comment">
                            <field name="comment"/>
                        </page>
                        <page string="Response Message" name="response_message" attrs="{'invisible': [('receive_response', '=', False)]}">
                            <field name="response_message"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tyt_intranet_mailbox_view_tree" model="ir.ui.view">
        <field name="name">tyt.intranet.mailbox.view.tree</field>
        <field name="model">tyt.intranet.mailbox</field>
        <field name="arch" type="xml">
            <tree default_order="create_date desc">
                <field name="name"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="employee_number"/>
                <field name="is_anonymous"/>
                <field name="site_id"/>
                <field name="service_area_id"/>
                <field name="message_type_id"/>
                <field name="receive_response"/>
            </tree>
        </field>
    </record>

    <record id="tyt_intranet_mailbox_action" model="ir.actions.act_window">
        <field name="name">Mailbox</field>
        <field name="res_model">tyt.intranet.mailbox</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
