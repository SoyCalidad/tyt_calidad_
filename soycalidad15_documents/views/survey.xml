<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_view_docs_form" model="ir.ui.view">
        <field name="name">survey.survey.view.form</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_change_request_view']" position="before">
                <button name="action_open_documents"
                    class="oe_stat_button"
                    groups="documents.group_documents_user"
                    icon="fa-file-text"
                    type="object">
                    <field name="document_count" widget="statinfo" string="Documents"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>