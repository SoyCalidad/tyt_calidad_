<odoo>
    <data>
        <record id="view_hr_config_settings_inherit" model="ir.ui.view">
            <field name="name">hr.config.settings.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='col-xs-12 col-md-6 o_setting_box hola_calidad']" position="inside">
                    <div class="o_setting_right_pane">
                        <label for="training_process_id"/>
                        <div class="row">
                            <div class="text-muted col-md-8">
                            Procedimiento anexado a todos los registros de auditorías que se hagan en el módulo de Auditorías, automaticamente se obtendrá la última versión
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="training_process_id" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>