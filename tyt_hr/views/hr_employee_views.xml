<odoo>    
    <data>
        <record id="inherit_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <!-- Ocultar el campo work_phone -->
                <field name="work_phone" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <!-- Ocultar el campo job_title -->
                <field name="job_title" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="parent_id" position="replace">
                    <field name="tyt_manager_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>