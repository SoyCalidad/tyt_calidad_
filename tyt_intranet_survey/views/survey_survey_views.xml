    <record id="tyt_survey_survey_view_search" model="ir.ui.view">
        <field name="name">survey.survey.search</field>
        <field name="model">survey.survey</field>
        <field name="arch" type="xml">
            <search string="Survey">
                <field string="Survey" name="title"/>
                <field string="Department" name="department_id"/>
                <field string="Job Position" name="job_id"/>
                <filter string="Published Start Date" name="published_start_date" date="published_start_date"/>
                <filter string="Published End Date" name="published_end_date" date="published_end_date"/>
                <searchpanel>
                    <field name="department_id" icon="fa-users" enable_counters="1"/>
                    <field name="job_id" icon="fa-users" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="tyt_survey_survey_action" model="ir.actions.act_window">
        <field name="name">Survey</field>
        <field name="res_model">survey.survey</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="tyt_survey_survey_view_search"/>
    </record>

    <record id="tyt_x_area_encuesta_view_form" model="ir.ui.view">
        <field name="name">x_area_encuesta.view.form</field>
        <field name="model">x_area_encuesta</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="x_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tyt_x_area_encuesta_view_tree" model="ir.ui.view">
        <field name="name">x_area_encuesta.view.tree</field>
        <field name="model">x_area_encuesta</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="x_name"/>
            </tree>
        </field>
    </record>

    <record id="tyt_x_area_encuesta_action" model="ir.actions.act_window">
        <field name="name">Area Encuesta</field>
        <field name="res_model">x_area_encuesta</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'tree_view_ref': 'tyt_intranet_survey.tyt_x_area_encuesta_view_tree',
            'form_view_ref': 'tyt_intranet_survey.tyt_x_area_encuesta_view_form',
        }
        </field>
    </record>

