<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_survey_view_form" model="ir.ui.view">
        <field name="name">survey.survey.view.form.inherit</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_survey_user_input']" position="before">
                <button name="action_show_employees" type="object" class="oe_stat_button" icon="fa-users">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="employee_count"/>
                        </span>
                        <span class="o_stat_text">Employees</span>
                    </div>
                </button>
            </xpath>

            <xpath expr="//notebook//page[@name='options']//group[@name='participants']//field[@name='access_mode']" position="after">
                <field name="authorized_group_id" widget="many2one" attrs="{'invisible': [('access_mode', '!=', 'intranet')], 'readonly': [('is_published', '=', True)]}"/>
                <field name="is_published" attrs="{'invisible': [('access_mode', '!=', 'intranet')]}" readonly="1"/>
                <label for="published_start_date" string="Published Date"/>
                <div name="dates" class="o_row">
                    <field name="published_start_date" widget="daterange" options='{"related_published_end_date": "published_end_date"}' readonly="1"/>
                    <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                    <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('published_start_date', '=', False), ('published_end_date', '=', False)]}"/>
                    <field name="published_end_date" widget="daterange" options='{"related_published_start_date": "published_start_date"}' readonly="1"/>
                </div>
            </xpath>
            <xpath expr="//group[@name='participants']//field[@name='access_mode']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_published', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='users_login_required']" position="attributes">
                <attribute name="attrs">{'invisible': [('access_mode', '=', 'intranet')]}</attribute>
            </xpath>
            <xpath expr="//label[@for='is_attempts_limited']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('access_mode', '=', 'intranet'), '&amp;', ('access_mode', '=', 'public'), ('users_login_required', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='is_attempts_limited']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('access_mode', '=', 'intranet'), '&amp;', ('access_mode', '=', 'public'), ('users_login_required', '=', False)]}</attribute>
            </xpath>

            <xpath expr="//field[@name='users_can_go_back']" position="after">
                <field name="questions_mandatory"/>
            </xpath>
            <xpath expr="//field[@name='question_and_page_ids']" position="attributes">
                <attribute name="context">{
                        'default_survey_id': active_id,
                        'default_questions_selection': questions_selection,
                        'default_constr_mandatory': questions_mandatory,
                    }
                </attribute>
            </xpath>
        </field>
    </record>

    <record id="tyt_survey_survey_view_search" model="ir.ui.view">
        <field name="name">survey.survey.search</field>
        <field name="model">survey.survey</field>
        <field name="arch" type="xml">
            <search string="Survey">
                <field string="Survey" name="title"/>
                <filter string="Published Start Date" name="published_start_date" date="published_start_date"/>
                <filter string="Published End Date" name="published_end_date" date="published_end_date"/>
                <group expand="0" string="Group By">
                    <filter string="Department" name="department_id" context="{'group_by':'department_id'}"/>
                    <filter string="Job Position" name="job_id" context="{'group_by':'job_id'}"/>
                    <filter string="Site" name="sitio_id" context="{'group_by':'sitio_id'}"/>
                </group>
                <searchpanel>
                    <field name="department_id" icon="fa-users" enable_counters="1"/>
                    <field name="job_id" icon="fa-users" enable_counters="1"/>
                    <field name="sitio_id" icon="fa-bars" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="tyt_survey_survey_action" model="ir.actions.act_window">
        <field name="name">Surveys</field>
        <field name="res_model">survey.survey</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="tyt_survey_survey_view_search"/>
    </record>

    <record id="tyt_x_area_encuesta_view_form" model="ir.ui.view">
        <field name="name">x_area_encuesta.view.form</field>
        <field name="model">x_area_encuesta</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="x_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tyt_x_area_encuesta_view_tree" model="ir.ui.view">
        <field name="name">x_area_encuesta.view.tree</field>
        <field name="model">x_area_encuesta</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="x_name"/>
            </tree>
        </field>
    </record>

    <record id="tyt_x_area_encuesta_action" model="ir.actions.act_window">
        <field name="name">Areas - Typification</field>
        <field name="res_model">x_area_encuesta</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'tree_view_ref': 'tyt_intranet_survey.tyt_x_area_encuesta_view_tree',
            'form_view_ref': 'tyt_intranet_survey.tyt_x_area_encuesta_view_form',
        }
        </field>
    </record>

    <record id="tyt_x_tipo_encuesta_view_form" model="ir.ui.view">
        <field name="name">x_tipo_encuesta.view.form</field>
        <field name="model">x_tipo_encuesta</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="x_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tyt_x_tipo_encuesta_view_tree" model="ir.ui.view">
        <field name="name">x_tipo_encuesta.view.tree</field>
        <field name="model">x_tipo_encuesta</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="x_name"/>
            </tree>
        </field>
    </record>

    <record id="tyt_x_tipo_encuesta_action" model="ir.actions.act_window">
        <field name="name">Tipos - Typification</field>
        <field name="res_model">x_tipo_encuesta</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'tree_view_ref': 'tyt_intranet_survey.tyt_x_tipo_encuesta_view_tree',
            'form_view_ref': 'tyt_intranet_survey.tyt_x_tipo_encuesta_view_form',
        }
        </field>
    </record>
</odoo>
