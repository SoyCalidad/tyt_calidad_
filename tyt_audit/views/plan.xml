<odoo>    
    <data>

        <!-- Cronograma de Auditorías - General -->
        <record id="view_audit_plan_form_tyt_general_schedule" model="ir.ui.view">
            <field name="name">audit.plan.form.tyt.general.schedule</field>
            <field name="model">audit.plan</field>
            <field name="inherit_id" ref="mgmtsystem_audit.view_audit_plan_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='send_elaborate']" position="before">
                    <field name="is_process_started" invisible="1" />
                    <button name="start_process"
                            type="object"
                            string="Iniciar Proceso"
                            class="oe_highlight" />
                    <button name="generate_schedule_lines"
                            type="object"
                            string="Generar Fechas"
                            class="oe_highlight" />                            
                    <!--attrs="{'invisible':['|', ('active','=',False), ('state', '!=', 'validate_ok'), ('is_process_started','=',True)]}"-->    
                </xpath>            
                <xpath expr="//sheet/div[3]" position="replace">
                    <div>
                        <label for="audit_plan_tyt_auditor_id"/>
                        <div class="o_row">
                            <field name="audit_plan_tyt_auditor_id" options="{'no_create': True}" colspan="2"/>
                        </div>    
                    </div>                    
                </xpath>
                <xpath expr="//sheet/div[3]" position="after">
                    <div style="height: 20px;"></div>
                    <group cols="3">
                        <group>
                            <field name="sites_id" colspan="2" />
                            <field name="start_date" colspan="1" required="1" />
                            <field name="limit_date" colspan="1" required="1" />
                            <field name="new_frequency_id" colspan="1" required="1" />
                            <field name="available_site_ids" invisible="1" />
                        </group>
                    </group>
                </xpath>
                <xpath expr="//sheet/notebook/page[1]" position="replace">
                    <page string="Cronograma" readonly="1">
                        <!--<field name="schedule_ids" domain="[('sites_id', '=', sites_id)]">-->
                        <field name="filtered_schedule_ids">
                            <tree  >
                                <field name="name" readonly="1"/>
                                <field name="description_id" readonly="1"/>
                                <field name="activity_id" readonly="1"/>
                                <field name="sites_id" readonly="1"/>
                                <field name="responsible_auditors_id" widget="many2many_tags"/>
                                <field name="total_weeks" readonly="1"/>
                                <!--<field name="line_ids"/>-->
                                <button name="%(action_audit_plan_schedule_line_ids)d" type="action" string="Ver Fechas" class="btn-primary"/>
                            </tree>
                        </field>
                    </page>                 
                </xpath>                                
            </field>
        </record>





        <!-- Wizard Cronograma de Auditorías-->
        <record id="inherit_audit_plan_report_wizard_tyt_view_form" model="ir.ui.view">
            <field name="name">inherit.audit.plan.report.wizard.tyt.view.form</field>
            <field name="model">audit.plan.report.wizard</field>
            <field name="inherit_id" ref="mgmtsystem_audit.audit_plan_report_wizard_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]/field[@name='audit_plan_id']" position="attributes">
                    <attribute name="string">Cronograma de Auditorías</attribute>
                </xpath>
            </field>
        </record>
        <!-- Window Actions-->

        <record id="mgmtsystem_audit.audit_plan_action" model="ir.actions.act_window">
            <field name="name">Cronograma de Auditorías - General</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">audit.plan</field>
            <field name="view_mode">tree,form,kanban,graph,pivot</field>
        </record>

        <record id="mgmtsystem_audit.audit_plan_report_wizard_action2" model="ir.actions.act_window">
            <field name="name">Cronograma de Auditorías</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">audit.plan.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="mgmtsystem_audit.audit_plan_report_wizard_view_form"/>
            <field name="binding_type">report</field>
        </record>

        <record id="mgmtsystem_audit.action_audit_plan_configurator" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Cree un Cronograma de Auditorías.</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="res_model">audit.plan</field>
            <field name="view_id" ref="mgmtsystem_audit.onboarding_audit_plan_form"/>
        </record>

        <!-- Menu Items-->

        <record model="ir.ui.menu" id="mgmtsystem_audit.hr_item_annual_plan">
            <field name="name">Cronograma de Auditorías - General</field>
            <field name="parent_id" ref="tyt_audit.anual_plan_tyt"/>
        </record>

        <record model="ir.ui.menu" id="mgmtsystem_audit.audit_plan_wizard_menu1">
            <field name="name">Cronograma de Auditorías</field>
        </record>

        <!-- Onboard Template-->

        <template id="inherit_onboarding_audit_plan_step" inherit_id="mgmtsystem_audit.onboarding_audit_plan_step">
            <xpath expr="//t[@t-set='title']" position="replace">
                <t t-set="title">Cronograma de Auditorías</t>
            </xpath>
            <xpath expr="//t[@t-set='description']" position="replace">
                <t t-set="description">Cree un Cronograma de Auditorías.</t>
            </xpath>
        </template>

    </data>
</odoo>