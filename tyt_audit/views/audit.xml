<odoo>    
    <data>
        <record id="report_line_form_tyt" model="ir.ui.view">
            <field name="name">report_line_form_tyt</field>
            <field name="model">report.line</field>
            <field name="inherit_id" ref="mgmtsystem_audit.report_line_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]" position="replace">
                    <group>
                        <field name="date_audit" />
                        <field name="employee_id" />
                        <field name="datetime" />
                        <field name="nc_id" />
                        <field name="found" style="display:block;max-width:480px;overflow-wrap:break-word;"/>
                        <field name="observations" style="display:block;max-width:480px;overflow-wrap:break-word;" />
                        <field name="image_attached" />
                    </group>                          
                </xpath>
            </field>
        </record>

        <record id="view_audit_audit_form_tyt" model="ir.ui.view">
            <field name="name">audit.audit.form.tyt</field>
            <field name="model">audit.audit</field>
            <field name="inherit_id" ref="mgmtsystem_audit.view_audit_audit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[2]" position="replace">
                    <div class="oe_title">
                        <label for="name" />
                        <h2>
                            <field name="name" string="Nombre" attrs="{'readonly': [('state','not in',('elaborate'))] }" />
                        </h2>
                    </div>    
                </xpath>            
                <xpath expr="//sheet/group[1]" position="before">
                    <label for="plan_id" string="Cronograma de auditorías - General" />
                    <div class="oe_title">
                        <h3>
                            <field name="plan_id" colspan="2" style="width:80%%" attrs="{'readonly': [('state','in',('send', 'final', 'cancel'))]}" />
                        </h3>
                    </div>

                    <div style="height: 20px;"></div>  

                </xpath>
                <xpath expr="//sheet/group[1]" position="replace">
                    <group attrs="{'readonly': [('state','in',('send', 'final', 'cancel'))]}">                   
                        <group>
                            <!--<field name="plan_id"  />-->
                            <field name="tyt_sites_related_id"  />
                            <field name="employee_id"  />
                            <field name="team_id" string="Grupo Auditor"  />
                            <!--<field name="plan_id"  />-->
                            <field name="tyt_procedure_id" options="{'no_create': True}"  />
                            <field name="job_id" />
                            <field name="date_init" invisible = "1"/>
                        </group>
                        <group>
                            <field name="audit_date" attrs="{'required': [('state','in',['validate_ok'])]}" />
                            <field name="audited_week" attrs="{'required': [('state','in',['validate_ok'])]}" />
                        </group>
                    </group>                      
                </xpath>

                <xpath expr="//sheet/group[2]" position="replace">
                    <group>                   
                    </group>                      
                </xpath>     

            </field>
        </record>        

        <!-- Listas de Verificación -->
        <record id="inherit_audit_report_wizard_tyt_view_form" model="ir.ui.view">
            <field name="name">inherit.audit.report.wizard.tyt.view.form</field>
            <field name="model">audit.report.wizard</field>
            <field name="inherit_id" ref="mgmtsystem_audit.audit_report_wizard_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]/field[@name='audit_id']" position="attributes">
                    <attribute name="string">Lista de Verificación</attribute>
                </xpath>
            </field>
        </record>
        

            <!-- Window Actions-->

        <record id="mgmtsystem_audit.audit_audit_action" model="ir.actions.act_window">
            <field name="name">Listas de Verificación</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">audit.audit</field>
            <field name="view_mode">tree,form,kanban,graph,pivot</field>
        </record>

        <record id="mgmtsystem_audit.audit_report_wizard_action2" model="ir.actions.act_window">
            <field name="name">Listas de Verificación</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">audit.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mgmtsystem_audit.audit_report_wizard_view_form"/>
            <field name="target">new</field>
            <field name="binding_type">report</field>
        </record>

        <record id="mgmtsystem_audit.action_audit_audit_configurator" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Cree una Lista de Verificación.</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="res_model">audit.audit</field>
            <field name="view_id" ref="mgmtsystem_audit.onboarding_audit_audit_form"/>
        </record>        


            <!-- Menu Items-->

        <record model="ir.ui.menu" id="mgmtsystem_audit.audit_audit_item">
            <field name="name">Listas de Verificación</field>
        </record>

        <record model="ir.ui.menu" id="mgmtsystem_audit.audit_audit_wizard_menu1">
            <field name="name">Listas de Verificación</field>
        </record>

            <!-- Onboard Template-->

        <template id="inherit_onboarding_audit_audit_step" inherit_id="mgmtsystem_audit.onboarding_audit_audit_step">
            <xpath expr="//t[@t-set='title']" position="replace">
                <t t-set="title">Listas de Verificación</t>
            </xpath>
            <xpath expr="//t[@t-set='description']" position="replace">
                <t t-set="description">Cree una Lista de Verificación.</t>
            </xpath>
        </template>





    </data>
</odoo>