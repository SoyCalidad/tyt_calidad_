<odoo>
    <data>

        <record id="view_audit_plan_form" model="ir.ui.view">
            <field name="name">audit.plan.tyt.auditor.form</field>
            <field name="model">audit.plan.tyt.auditor</field>
            <field name="arch" type="xml">
                <form string="Cronograma de Auditoría - Auditor">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="elaborate,review,validate,validate_ok" />
                        <button string="Enviar a Elaborar"
                                name="send_elaborate"
                                type="object"
                                class="btn-primary"
                                attrs="{'invisible':[('state','in', ('elaborate','validate','validate_ok','cancel'))]}" />
                        <button string="Enviar a Revisar"
                                name="send_review"
                                type="object"
                                class="btn-primary"
                                attrs="{'invisible':[('state','in', ('review','validate_ok','cancel'))]}" />
                        <button string="Enviar a Validar"
                                name="send_validate"
                                type="object"
                                class="btn-primary"
                                attrs="{'invisible':[('state','in', ('elaborate','validate','validate_ok','cancel'))]}" />
                        <button string="Validar"
                                name="send_validate_ok"
                                type="object"
                                class="btn-primary"
                                attrs="{'invisible':[('state','not in', ('validate'))]}" />
                        <button string="Volver Obsoleto"
                                confirm="Esto volverá obsoleto el presente registro. ¿Está seguro(a)?"
                                name="send_cancel"
                                type="object"
                                class="btn-second"
                                attrs="{'invisible': [('state','in',('cancel'))] }" />
                        <button name="button_new_version"
                                type="object"
                                string="Nueva versión"
                                attrs="{'invisible':['|', ('active','=',False), ('state', '!=', 'validate_ok')]}"
                                class="oe_highlight" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--
                            <button type="object"
                                    name="open_audit_ids"
                                    class="oe_stat_button"
                                    icon="fa-calendar"
                                    string="Planes de auditoría" />-->
                            <button type="object"
                                    name="action_open_older_versions"
                                    class="oe_stat_button"
                                    icon="fa-archive"
                                    style="white-space: nowrap;"
                                    string="Versiones antiguas" />
                            <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
                            
                        </div>
                        <!--
                        <h1>
                            <field name="code" />
                        </h1>
                        -->
                        <field name="active" invisible="1" />
                        <label for="name" />
                        <div class="oe_title">
                            <h2>
                                <field name="name" colspan="2" style="width:80%%" />
                            </h2>
                        </div>
                        <notebook>
                            <page string="Cronograma">
                                <field name="schedule_ids" attrs="{'readonly': [('state','in',('validate_ok', 'cancel'))]}" >
                                    <tree editable="bottom">
                                        <field name="tyt_sites_id" />
                                        <field name="responsible_auditors_id" widget="many2many_tags" />
                                        <field name="human_resources" />
                                        <field name="quality" />
                                        <field name="systems" />
                                        <field name="internal_regulations" />
                                        <field name="operations" />
                                        <field name="additionals"  />
                                        <field name="total_sum"  />
                                    </tree>
                                </field>
                            </page>
                            <page name="validation" string="Validación y versión">
                                <group col="4">
                                    <group colspan="4">
                                        <field name="version" />
                                    </group>
                                    <group colspan="4">
                                        <separator string="Elaboración" />
                                        <field name="elaboration_step" colspan="2" nolabel="1" attrs="{'readonly': [('state','not in',('elaborate'))]}" />
                                        <separator string="Revisión" />
                                        <field name="review_step" colspan="2" nolabel="1" attrs="{'readonly': [('state','not in',('elaborate', 'review'))]}" />
                                        <separator string="Validación" />
                                        <field name="validation_step" colspan="2" nolabel="1" attrs="{'readonly': [('state','not in',('elaborate', 'review', 'validate'))]}" />
                                    </group>
                                    <group colspan="4">
                                        <field name="date_elaborate" attrs="{'required': [('state','in',('elaborate'))], 'readonly': True}" />
                                        <field name="date_review" attrs="{'required': [('state','in',('review'))], 'readonly': True, 'invisible': [('state','in',('elaborate'))] }" />
                                        <field name="date_validate" groups="base.group_no_one,base.user_admin" attrs="{'invisible': [('state','in',('elaborate','review'))] }" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>

                </form>
            </field>
        </record>


        <record id="audit_plan_tyt_auditor_action" model="ir.actions.act_window">
            <field name="name">Cronograma de Auditoría - Auditor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">audit.plan.tyt.auditor</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="anual_plan_tyt"
                  name="Cronograma de Auditorías"
                  parent="mgmtsystem_audit.menu_audit_root"
                  sequence="1"/>



        <menuitem id="anual_plan_tyt_auditor"
                  name="Cronograma de Auditoría - Auditor"
                  parent="tyt_audit.anual_plan_tyt"
                  sequence="2"
                  action="audit_plan_tyt_auditor_action" />

    </data>
</odoo>