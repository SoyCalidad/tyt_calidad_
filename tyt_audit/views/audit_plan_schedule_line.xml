<odoo>
    <data>

        <record id="view_audit_plan_schedule_line_tree" model="ir.ui.view">
            <field name="name">audit.plan.schedule.line.tree</field>
            <field name="model">audit.plan.schedule.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" string="Nombre de línea"/>
                    <field name="scheduled_date"/>
                    <field name="schedule_id"/>
                    <field name="done"/>
                </tree>
            </field>
        </record>

