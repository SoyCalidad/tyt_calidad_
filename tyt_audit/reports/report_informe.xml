<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_informe_auditorias_tyt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>
                <t t-call="tyt_audit.external_layout_tyt_cover">
                    <div class="page">
                        <div class="tyt_cover">
                            <div class="watermark" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; opacity: 0.2;">
                                <!--<img t-att-src="'/tyt_audit/static/src/img/watermark_cover.png'" style="width: 200px; height: auto;" />-->
                                <img src="/tyt_audit/static/src/img/watermark_cover.png" />
                            </div>
                            <!-- Contenido superpuesto sobre la marca de agua -->                            
                            <div class="content" style="z-index: 1; position: relative; padding: 20px;">
                                <!-- Título principal -->
                                <div class="spacer" style="width: 100%; height: 2.97cm;"></div>
                                <div class="title-container">
                                    <h1 >SISTEMA DE GESTIÓN DE CALIDAD</h1>
                                    <h2 >Subtítulo del sistema de calidad</h2>
                                    <!--"overflow: hidden;" Nos ayuda a mantener dentro del div , las imagenes (Objetos Flotantes) -->
                                    <img src="/tyt_audit/static/src/img/logo_tyt.png" style="max-width:200px;max-height:200px;vertical-align:middle;float: right;margin-right: 10px;" alt="Logo"/>
                                </div>
                                
                                <!-- Franja de colores -->
                                <div class="color-stripes" style="margin-top: 30px;">
                                    <div style="height: 8px; background-color: white;"></div>
                                    <div style="height: 16px; background-color: #215967;"></div> <!-- Celeste oscuro -->
                                    <div style="height: 8px; background-color: white;"></div>
                                    <div style="height: 8px; background-color: #87CEFA;"></div> <!-- Celeste claro -->
                                </div>
                                
                                <!-- Subtítulo adicional -->
                                <div class="subtitle-container" style="text-align: center; margin-top: 100px;background-color: rgba(231, 245, 229, 0.7);padding: 70px 0;">
                                    <h2 style="font-size: 54px;font-weight: bold;color: #215967;">TYT LOGÍSTICA Y SERVICIOS</h2>
                                </div>
                                
                                <!-- Contenedores de dos columnas -->
                                <table class="cover-table" style="width: 100%; border-collapse: collapse; margin-top: 30px;">
                                    <tr>
                                        <!-- Primera columna (40% de ancho) -->
                                        <td style="width: 40%; background-color: #E7F5E5; padding: 10px;text-align: left;">
                                            <strong class="bold-text">FECHA DE LA AUDITORIA:</strong><br/>
                                            
                                            <strong class="bold-text">ESTE INFORME HA SIDO PREPARADO POR:</strong><br/>
                                            
                                            <strong class="bold-text">AUDITORES:</strong><br/>
                                            
                                            <strong class="bold-text">NÚMERO DE CONTACTO:</strong><br/>
                                            
                                            <strong class="bold-text">CORREO ELECTRÓNICO:</strong>
                                        </td>
                                        <!-- Segunda columna (60% de ancho) -->
                                        <td style="width: 60%; background-color: #D0E8F2; padding: 10px;text-align: left;">
                                            <strong class="bold-text">SITIO:</strong><br/>
                                            
                                            <strong class="bold-text">NORMAS APLICABLES:</strong><br/>
                                            <span style="font-size: 30px;">SISTEMA DE GESTIÓN INTEGRAL NORMAS. -</span><br/>
                                            <span style="font-size: 30px;">ISO 9001:2015</span><br/>
                                            <span style="font-size: 30px;">ISO 27001:2022</span><br/>
                                            <span style="font-size: 30px;">PCI DSS</span><br/>
                                        </td>
                                    </tr>
                                </table>
                            </div>  
                        </div>
                    </div>
                    <!-- Segunda Hoja -->
                    <div class="page">
                        <!-- Información del sitio -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                            <tr>
                                <td style="background-color: #31869B; color: white; padding: 10px; font-weight: bold;font-size: 28px;">
                                    Información del Sitio
                                </td>
                            </tr>
                            <tr>
                                <td class="td-font" style="padding: 10px;">
                                    Gerente de Sitio: ___________________________________________<br/>
                                    Correo electrónico: __________________________________________<br/>
                                    Responsable de Capacitación y Calidad: _______________________
                                </td>
                            </tr>
                        </table>

                        <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                            <tr>
                                <td class="td-font" style="background-color: #E7F5E5; padding: 10px; font-weight: bold;">
                                    La fecha de la próxima auditoría es:
                                </td>
                                <td style="padding: 10px; width: 30%;">
                                    ______________________________________
                                </td>
                            </tr>
                        </table>

                        <!-- Información de la auditoría -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                            <tr>
                                <td style="background-color: #31869B; color: white; padding: 10px; font-weight: bold;font-size: 28px;">
                                    Información de la Auditoría
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px;">
                                    Duración de la Auditoría (en días): ___________________________
                                </td>
                            </tr>
                        </table>

                        <!-- Tabla del equipo auditor -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px; border: 1px solid black;">
                            <thead>
                                <tr style="background-color: #31869B; color: white; text-align: center;">
                                    <th style="padding: 5px;" colspan="2">Equipo Auditor</th>
                                    <th style="padding: 5px;" colspan="2">Dirigente de Auditoría</th>
                                    <th style="padding: 5px;" colspan="2">Entrevistados</th>
                                </tr>
                                <tr style="background-color: #87CEFA; text-align: center;">
                                    <th style="padding: 5px;">Puesto</th>
                                    <th style="padding: 5px;">Nombre</th>
                                    <th style="padding: 5px;">Puesto</th>
                                    <th style="padding: 5px;">Nombre</th>
                                    <th style="padding: 5px;">Puesto</th>
                                    <th style="padding: 5px;">Nombre</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="text-align: center;">
                                    <td style="padding: 10px;">______</td>
                                    <td style="padding: 10px;">______</td>
                                    <td style="padding: 10px;">______</td>
                                    <td style="padding: 10px;">______</td>
                                    <td style="padding: 10px;">______</td>
                                    <td style="padding: 10px;">______</td>
                                </tr>
                                <!-- Añade más filas si es necesario -->
                            </tbody>
                        </table>

                        <!-- Conclusión de la auditoría -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                            <tr>
                                <td style="background-color: #31869B; color: white; padding: 10px; font-weight: bold;font-size: 28px;">
                                    Conclusión de la Auditoría
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px;">
                                    - Esta visita fue satisfactoria: ( )<br/>
                                    - Se han identificado ( ) No Conformidades y ( ) Buenas Prácticas.<br/>
                                    - Cualquier hallazgo se detalla en la(s) siguiente(s) página(s).
                                </td>
                            </tr>
                        </table>

                        <!-- Medidas post-auditoría -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                            <tr>
                                <td style="background-color: #31869B; color: white; padding: 10px; font-weight: bold;font-size: 28px;">
                                    Medidas post-auditoría
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px;">
                                    Recomendable intensificar el seguimiento de las siguientes cláusulas del <strong>Procedimiento para Gestión de Operaciones</strong>:
                                </td>
                            </tr>
                        </table>
                        <!-- Cuadro de Evaluación -->
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px; border: 1px solid black;">
                            <tr style="background-color: #31869B; color: white;">
                                <td style="padding: 10px; font-weight: bold; width: 30%;">Documento:</td>
                                <td style="padding: 10px; background-color: white; width: 70%;"></td> <!-- Segunda columna con fondo blanco -->
                            </tr>
                            <tr style="background-color: #31869B; color: white;">
                                <td style="padding: 10px; font-weight: bold; width: 30%;">Auditados:</td>
                                <td style="padding: 10px; background-color: white; width: 70%;"></td> <!-- Segunda columna con fondo blanco -->
                            </tr>
                            <tr style="background-color: #31869B; color: white;">
                                <td style="padding: 10px; font-weight: bold; width: 30%;">Auditor:</td>
                                <td style="padding: 10px; background-color: white; width: 70%;"></td> <!-- Segunda columna con fondo blanco -->
                            </tr>
                            <tr style="background-color: #31869B; color: white;">
                                <td colspan="2" style="padding: 10px; font-weight: bold;">Evaluación:</td>
                            </tr>
                            <tr>
                                <td colspan="2" style="padding: 10px; background-color: white; height: 100px;">Evaluation ...</td> <!-- Fila de Evaluación con una sola columna que ocupa todo el ancho -->
                            </tr>
                        </table>                
                    </div>                    
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_informe_auditorias_tyt" model="ir.actions.report">
        <field name="name">Reporte Informe de Auditoría</field>
        <field name="model">audit.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tyt_audit.report_informe_auditorias_tyt</field>
        <field name="report_file">tyt_audit.report_informe_auditorias_tyt</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_model_id" ref="mgmtsystem_audit.model_audit_report"/>
        <field name="paperformat_id" ref="tyt_audit.tyt_body_paperformat" />
        <field name="binding_type">report</field>

    </record>



    <!--unlink base report
    <record id="mgmtsystem_audit.report_audit_edition" model="ir.actions.report">
        <field name="binding_model_id" eval="False" />
    </record>
    -->
</odoo>
