<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="edition_share_template">
        <html>
            <head>
                <title><t t-esc="pdf_filename"/></title>
                <t t-call-assets="tyt_recruitment.assets_pdfjs_viewer"/>
                <style>
                    html, body {
                        height: 100%;
                        margin: 0;
                        padding: 0;
                        overflow: hidden;
                    }
                    iframe {
                        width: 100%;
                        height: 100vh;
                        border: none;
                    }
                </style>
            </head>
            <body>
                <iframe t-attf-src="/tyt_recruitment/static/lib/pdfjs/web/viewer.html?file={{ pdf_url }}" type="application/pdf"/>
            </body>
        </html>
    </template>
</odoo>
