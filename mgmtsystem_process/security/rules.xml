<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <!-- Add you code here -->
        <record model="ir.rule" id="rule_process_owner_document">
            <field name="name">Usuario secundario: Lectura Edici√≥n de documentos propios</field>
            <field name="model_id" ref="model_mgmt_process"/>
            <field name="groups" eval="[(4, ref('mgmtsystem_process.group_process_owner'))]"/>
            <field name="perm_read" eval="1" />
            <field name="perm_write" eval="1" />
            <field name="perm_create" eval="1" />
            <field name="perm_unlink" eval="1" />
            <field name="domain_force">[('responsible_id','in',[user.id])]</field>
        </record>

        <record model="ir.rule" id="rule_process_noowner_document">
            <field name="name">Usuario secundario: Documentos ajenos</field>
            <field name="model_id" ref="model_mgmt_process"/>
            <field name="groups" eval="[(4, ref('mgmtsystem_process.group_process_owner'))]"/>
            <field name="perm_read" eval="1" />
            <field name="perm_write" eval="0" />
            <field name="perm_create" eval="0" />
            <field name="perm_unlink" eval="0" />
            <field name="domain_force">[('responsible_id','not in',[user.id])]</field>
        </record>
        


        <record model="ir.rule" id="rule_process_all_document">
            <field name="name">Permisos Totales</field>
            <field name="model_id" ref="model_mgmt_process"/>
            <field name="groups" eval="[(4, ref('mgmtsystem_process.group_process_all'))]"/>
            <field name="perm_read" eval="1" />
            <field name="perm_write" eval="1" />
            <field name="perm_create" eval="1" />
            <field name="perm_unlink" eval="1" />
        </record>
    </data>
</odoo>