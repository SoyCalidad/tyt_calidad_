<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_invoice" inherit_id="account.portal_my_home_invoice" customize_show="True" priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_client_category_enable" t-value="True"/>
            <t t-set="portal_vendor_category_enable" t-value="True"/>
        </xpath>
        <div id="portal_client_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/tyt_intranet_portal/static/src/img/Bill.svg'"/>
                <t t-set="title">Sus Facturas</t>
                <t t-set="url" t-value="'/my/invoices?filterby=invoices'"/>
                <t t-set="text">Siga, descargue o pague sus facturas</t>
            </t>
        </div>
        <div id="portal_vendor_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/tyt_intranet_portal/static/src/img/Bill.svg'"/>
                <t t-set="title">Nuestras Facturas</t>
                <t t-set="url" t-value="'/my/invoices?filterby=bills'"/>
                <t t-set="text">Siga, descargue o pague nuestras facturas</t>
            </t>
        </div>
    </template>
</odoo>
