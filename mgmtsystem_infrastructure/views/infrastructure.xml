        <menuitem 
            id="menu_product_infrastructure_infra"
            name="Inventariado" 
            action="product_infrastructure_action"
            parent="menu_product_infrastructure"
            groups="maintenance.group_equipment_manager,base.group_user"
            sequence="1"/> -->

    </data>
</odoo>