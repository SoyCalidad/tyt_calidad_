<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nc_view_form" model="ir.ui.view">
        <field name="name">mgmtsystem.nonconformity.view.form</field>
        <field name="model">mgmtsystem.nonconformity</field>
        <field name="inherit_id" ref="mgmtsystem_nonconformity.view_mgmtsystem_nonconformity_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button name="action_document_ids" type="object" class="oe_stat_button" icon="fa-file-text-o">
                    <field string="Documentos" name="documents_count" widget="statinfo"/>
                </button>
            </div>
            <notebook position="inside">
                <page name="dms_document_ids" string="Documentos">
                    <field name="dms_document_ids" mode="kanban"></field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
