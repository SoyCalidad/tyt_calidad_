<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="tyt_survey.satisfaction_survey_main" name="satisfaction_survey_main">
        <t t-call="website.layout">
            <div class="center">
                <form action="/website/satisfaction_survey" method="post" enctype="multipart/form-data"
                    class="o_mark_required" data-mark="*" data-pre-fill="true"
                    data-success-mode="redirect"
                    data-model_name="tyt.satisfaction.survey">
                    <div class="s_website_form_rows s_col_no_bgcolor row">
                        <div class="s_website_form_field col-12 py-2 mb-0" data-type="char" data-name="Field">
                            <div class="s_col_no_resize s_col_no_bgcolor row">
                                <label class="s_website_form_label col-form-label col-sm-auto" style="width: 200px" for="sale1">
                                    <span class="s_website_form_label_content">Name</span>
                                </label>
                                <div class="col-sm">
                                    <input id="satisfaction_survey_1" type="text" class="s_website_form_input form-control" name="partner_name"/>
                                </div>
                            </div>
                        </div>
                        <div class="s_website_form_field col-12 py-2 mb-0" data-type="char" data-name="Field">
                            <div class="s_col_no_resize s_col_no_bgcolor row">
                                <label class="s_website_form_label col-form-label col-sm-auto" style="width: 200px" for="satisfaction_survey_1">
                                    <span class="s_website_form_label_content">Job</span>
                                </label>
                                <div class="col-sm">
                                    <input id="satisfaction_survey_2" type="text" class="s_website_form_input form-control" name="job"/>
                                </div>
                            </div>
                        </div>
                        <div class="s_website_form_field col-12 py-2 mb-0" data-type="char" data-name="Field">
                            <div class="s_col_no_resize s_col_no_bgcolor row">
                                <label class="s_website_form_label col-form-label col-sm-auto" style="width: 200px" for="satisfaction_survey_2">
                                    <span class="s_website_form_label_content">E-mail</span>
                                </label>
                                <div class="col-sm">
                                    <input id="satisfaction_survey_3" type="text" class="s_website_form_input form-control" name="email"/>
                                </div>
                            </div>
                        </div>
                        <div class="s_website_form_field col-12 py-2 mb-0" data-type="char" data-name="Field">
                            <div class="s_col_no_resize s_col_no_bgcolor row">
                                <label class="s_website_form_label col-form-label col-sm-auto" style="width: 200px" for="satisfaction_survey_3">
                                    <span class="s_website_form_label_content">Company</span>
                                </label>
                                <div class="col-sm">
                                    <input id="satisfaction_survey_4" type="text" class="s_website_form_input form-control" name="partner_company"/>
                                </div>
                            </div>
                        </div>
                        <div class="s_website_form_field col-12 py-2 mb-0" data-type="char" data-name="Field">
                            <div class="s_col_no_resize s_col_no_bgcolor row">
                                <label class="s_website_form_label col-form-label col-sm-auto" style="width: 200px" for="satisfaction_survey_4">
                                        <span class="s_website_form_label_content">Campaign</span>
                                </label>
                                <div class="col-sm">
                                    <input id="satisfaction_survey_5" type="text" class="s_website_form_input form-control" name="campaign"/>
                                </div>
                            </div>
                        </div>
                        <div class="s_website_form_submit s_website_form_no_submit_option d-flex flex-column flex-lg-row align-items-lg-center pt-4">
                            <a role="button"
                               name="website_sale_main_button"
                               class="s_website_form_send btn btn-primary order-lg-3 w-100 w-lg-auto ms-lg-auto"
                               href="/website/survey/satisfaction_survey">
                                Go to survey
                                <i class="fa fa-angle-right ms-2 fw-light"/>
                            </a>
                            <span id="s_website_form_result"/>
                        </div>
                    </div>
                </form>
            </div>
        </t>
    </template>

</odoo>