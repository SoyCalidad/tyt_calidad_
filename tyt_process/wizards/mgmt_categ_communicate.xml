<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tyt_mgmt_categ_communicate_view_form" model="ir.ui.view">
        <field name="name">tyt.mgmt.categ.communicate.view.form</field>
        <field name="model">tyt.mgmt.categ.communicate</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="write_uid" string="Actualizado última vez por"/>
                    <field name="write_date" string="Ultima Actualización"/>
                    <field name="company_id"/>
                </group>
                <group>
                    <field name="attachment_ids" widget="many2many_binary" string="Adjuntar un archivo" class="o_sign_attachments"/>
                </group>
                <footer>
                    <button string="Guardar" special="save" class="btn btn-primary" close="1"/>
                    <button string="Comunicar" name="action_communicate" type="object" class="btn btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn btn-secondary" close="1"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="tyt_mgmt_categ_communicate_action" model="ir.actions.act_window">
        <field name="name">Mapa de procesos - TYT</field>
        <field name="res_model">tyt.mgmt.categ.communicate</field>
        <field name="view_mode">form</field>
        <field name="binding_view_types">form</field>
		<field name="target">new</field>
        <field name="res_id" ref="tyt_process.tyt_mgmt_categ_communicate_singleton"/>
    </record>
</odoo>
