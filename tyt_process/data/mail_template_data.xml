<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="tyt_mgmt_categ_communicate_mail_template" model="mail.template">
            <field name="name">Mapa de procesos - TYT: Enviar por correo electrónico</field>
            <field name="model_id" ref="tyt_process.model_tyt_mgmt_categ_communicate" />
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email) }}&gt;</field>
            <field name="email_to"></field>
            <field name="subject">Mapa de procesos - TYT</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Estimado/a
                        <br />
                        <br />
                        Estimados se hace envío del presente mapa de procesos para su conocimiento y uso respectivo.
                        <br />
                        <br />
                        Saludos cordiales
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True" />
        </record>
    </data>
</odoo>
