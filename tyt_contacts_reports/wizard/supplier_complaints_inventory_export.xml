<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="supplier_complaints_inventory_export_view_form" model="ir.ui.view">
        <field name="name">supplier_complaints_inventory.export.view.form</field>
        <field name="model">supplier_complaints_inventory.export</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="export_xlsx_report" string="Download XLSX" type="object" class="btn-primary" icon="fa-download"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="supplier_complaints_inventory_export_action" model="ir.actions.act_window">
        <field name="name">Supplier Complaints Inventory Export</field>
        <field name="res_model">supplier_complaints_inventory.export</field>
        <field name="view_mode">form</field>
        <field name="binding_view_types">form</field>
		<field name="target">new</field>
    </record>
</odoo>
