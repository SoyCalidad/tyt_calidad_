<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="approved_supplier_export_view_form" model="ir.ui.view">
        <field name="name">approved_supplier.export.view.form</field>
        <field name="model">approved_supplier.export</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="is_critical"/>
                    </group>
                </sheet>
                <footer>
                    <button name="export_xlsx_report" string="Download XLSX" type="object" class="btn-primary" icon="fa-download"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>

    <record id="approved_supplier_export_action" model="ir.actions.act_window">
        <field name="name">Approved Supplier Export</field>
        <field name="res_model">approved_supplier.export</field>
        <field name="view_mode">form</field>
        <field name="binding_view_types">form</field>
		<field name="target">new</field>
    </record>
</odoo>
