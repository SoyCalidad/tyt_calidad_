<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="intranet_groups_view_form" model="ir.ui.view">
        <field name="name">intranet.groups.view.form</field>
        <field name="model">intranet.groups</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_filter_employees_by_criteria" string="Filter Employees" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_show_employees" type="object" class="oe_stat_button" icon="fa-users">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="employee_count"/>
                                </span>
                                <span class="o_stat_text">Employees</span>
                            </div>
                        </button>
                        <button name="action_show_users" type="object" class="oe_stat_button" icon="fa-users">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="user_count"/>
                                </span>
                                <span class="o_stat_text">Users</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
						<label for="name"/>
						<h1>
							<field name="name"/>
						</h1>
					</div>
                    <group>
                        <group>
                            <field name="department_id"/>
                            <field name="job_id"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Employees">
                            <field name="employee_ids"/>
                        </page>
                        <page string="Inherited">
                            <field name="implied_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="intranet_groups_view_tree" model="ir.ui.view">
        <field name="name">intranet.groups.view.tree</field>
        <field name="model">intranet.groups</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="implied_ids" widget="many2many_tags"/>
                <field name="employee_count"/>
            </tree>
        </field>
    </record>

    <record id="intranet_groups_action" model="ir.actions.act_window">
        <field name="name">Intranet Access Groups</field>
        <field name="res_model">intranet.groups</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
