<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="intranet_groups_view_form" model="ir.ui.view">
        <field name="name">intranet.groups.view.form</field>
        <field name="model">intranet.groups</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_filter_employees_by_criteria"
                            string="Filter Employees"
                            type="object"
                            class="btn-primary"
                            confirm="Are you sure you want to filter employees?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_show_employees" type="object" class="oe_stat_button" icon="fa-users">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="employee_count"/>
                                </span>
                                <span class="o_stat_text">Employees</span>
                            </div>
                        </button>
                        <button name="action_show_users" type="object" class="oe_stat_button" icon="fa-users">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="user_count"/>
                                </span>
                                <span class="o_stat_text">Users</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
						<label for="name"/>
						<h1>
							<field name="name" required="1"/>
						</h1>
					</div>
                    <group>
                        <group>
                            <field name="department_id"/>
                            <field name="sitio_id" invisible="1"/>
                            <field name="job_id"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employees" name="employees">
                            <field name="employee_ids">
                                <tree>
                                    <field name="x_studio_numero"/>
                                    <field name="name"/>
                                    <field name="intranet_user_id"/>
                                    <field name="department_id"/>
                                    <field name="job_id"/>
                                    <field name="x_studio_sitio"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Inherited" name="inherit_groups">
                            <label for="implied_ids" string="Employees added to this group are automatically added in the following groups."/>
                            <field name="implied_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="employee_ids"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="intranet_groups_view_tree" model="ir.ui.view">
        <field name="name">intranet.groups.view.tree</field>
        <field name="model">intranet.groups</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="implied_ids" widget="many2many_tags"/>
                <field name="employee_ids"/>
            </tree>
        </field>
    </record>

    <record id="intranet_groups_action" model="ir.actions.act_window">
        <field name="name">Intranet Access Groups</field>
        <field name="res_model">intranet.groups</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
