<odoo>
    <data>
        <record id="view_hr_config_settings_inherit" model="ir.ui.view">
            <field name="name">hr.config.settings.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hola_calidad.view_hola_calidad_configuration" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hola_calidad']"
                    position="inside">
                    <h2>Comunicaciones</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="record_meeting_line_approval" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="record_meeting_line_approval" />
                                <div class="text-muted">
                                    Los acuerdos requieren aprobación.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="o_setting_right_pane" name="hola_calidad_right_panel">
                        <label for="record_meeting_line_approval" />
                        <div class="row">
                            <div class="text-muted col-md-8">
                                Marcar si se desea que los acuerdos requieran aprobación.
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="record_meeting_line_approval" class="o_light_label" />
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>