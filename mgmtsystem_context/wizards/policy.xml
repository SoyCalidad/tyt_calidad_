<odoo>
    <data>

        <record id="report_context_policy_view" model="ir.ui.view">
            <field name="name">Políticas de calidad</field>
            <field name="model">wizard.policy.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="policy_id" />
                    </group>
                    <p>
                        Escoja una política para Imprimir
                    </p>
                    <footer>
                        <button name="action_print"
                                type="object"
                                string="Descargar"
                                class="oe_highlight"
                                icon="fa-download" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_report_context_policy" model="ir.actions.act_window">
            <field name="name">Políticas de calidad</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.policy.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_context_policy_view" />
            <field name="target">new</field>
            <field name="binding_type">report</field>
        </record>

        <menuitem id="report_policy_menu_3"
                  name="Reporte de políticas"
                  action="action_report_context_policy"
                  parent="context_report_menu"
                  sequence="10" />

        <menuitem id="report_policy_menu_4"
                  name="Reporte de políticas"
                  action="action_report_context_policy"
                  parent="mgmtsystem_process.process_report_root_menu"
                  sequence="10" />

    </data>
</odoo>